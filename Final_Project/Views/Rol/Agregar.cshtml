@model Final_Project.Models.Roles

@{
    ViewData["Title"] = "Agregar";
}

<h4>Crear un nuevo Rol</h4>
<hr />
<p class="alert-danger"><strong>Instruccioness:</strong> Aquí se crean los roles que les seran asignados a los usuarios</p>
<div class="row">
    
    <div class="col-md-4">
        <form asp-action="Agregar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Nuevo Rol</label>
                <input asp-for="Rol" class="form-control" placeholder="EJ:Moderador"/>
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear Rol" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


