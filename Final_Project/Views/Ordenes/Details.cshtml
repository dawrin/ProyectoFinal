@model Final_Project.Models.DataProductos


<h4>Ubicación del pedidido</h4>
<div id="map"></div>

<script>

        var map = L.map('map').setView([51.505, -0.09], 13);

        L.tileLayer('https://api.maptiler.com/maps/hybrid/{z}/{x}/{y}.jpg?key=E4w28j8mOyjdyJn8Q2VI', {
            attribution: '<a href="https://www.maptiler.com/copyright/" target="_blank">&copy; MapTiler</a> <a href="https://www.openstreetmap.org/copyright" target="_blank">&copy; OpenStreetMap contributors</a>'
        }).addTo(map);

        L.marker([@Html.DisplayFor(modelItem => Model.Latitud), @Html.DisplayFor(modelItem => Model.Longitud)]).addTo(map)
            .bindPopup('@Html.DisplayFor(modelItem => Model.NombreCliente)<br>@Html.DisplayFor(modelItem => Model.ApellidoCliente)')
            .openPopup();


</script>
